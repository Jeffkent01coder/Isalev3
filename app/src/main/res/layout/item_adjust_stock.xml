<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mvViewStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal"
            android:weightSum="2.5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtViewStockProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/samsungsans_medium"
                    android:text="Captain Morgan Gold 750 ml"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtViewStockProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui"
                    android:text="Price: KES 1,200.00"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtViewStockProductQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui"
                    android:text="Qty: 761"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="13sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgViewStockEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"
                android:maxWidth="26dp"
                android:maxHeight="26dp"
                android:src="@drawable/pencil"
                app:tint="@color/secondaryTextColor" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>